;			  			The size of the expression evaluation stack
;
; *******************************************************************************************

exprStackSize = 8

; *******************************************************************************************
;
;									Setup (Commander X16)
;
; *******************************************************************************************

!if TARGET=16 {
	
		* = $801
		!byte $0b,$08,$01,$00,$9e,$32,$30,$36,$31,$00,$00,$00  			; SYS 2061 header.
		jmp 	Boot
		
		zeroPageSpace = $22  											; X16 allows $22-$7F usage
		dataSpace = $400 												; $400-$7FF is available for machine code usage.
}
